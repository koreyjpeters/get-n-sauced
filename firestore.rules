rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Restaurant config: public read, admin write
    match /config/restaurant {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Menu & gallery: public read, admin write
    match /menuCategories/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /menuItems/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /gallery/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Public can add; only admins can read
    match /subscribers/{id} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    match /contactMessages/{id} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    match /cateringRequests/{id} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
