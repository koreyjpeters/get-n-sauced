rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Gallery and menu images: anyone can read (public site), only authenticated admins can write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /menu/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
